@model List<Vidly.Models.Customer>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>


@if (!Model.Any())
{
    @: Sorry we don't have any customers
}
else
{
    <div class="container">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Customers</th>
                    <th>Membership Type</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var customer in Model)
                {
                    <tr>
                        <td>@Html.ActionLink(customer.Name, "Details", new { id = customer.Id }, htmlAttributes: new { })</td>
                        <td>@customer.MembershipType.Name</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}




