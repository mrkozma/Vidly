@model List<Vidly.Models.Customer>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

<br />

<div class="container">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>
                    Customers
                </th>
            </tr>
        </thead>
        <tbody>
                @{
                    if (Model.Count == 0)
                    {
                        @: Sorry we don't have any customers
                    }
                    else
                    {
                        foreach (var customer in Model)
                        {
                            <tr><td>@Html.ActionLink(customer.Name, "Details", new { id = customer.Id }, htmlAttributes: new { })</td></tr>
                        }
                    }
                }
        </tbody>
    </table>
</div>



