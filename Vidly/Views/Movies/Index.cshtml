@model List<Vidly.Models.Movie>

@{
    ViewBag.Title = "Index";
}

<h2>Movies</h2>

<br />

<div class="container">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>
                    Movies
                </th>
            </tr>
        </thead>
        <tbody>
            @{
                if (Model.Count == 0)
                {
                    @: Sorry we don't have any customers
                }
                else
                {
                    foreach (var movie in Model)
                    {
                        <tr><td>@Html.ActionLink(movie.Name, "Details", new { id = movie.Id }, htmlAttributes: new { })</td></tr>
                    }
                }
            }
        </tbody>
    </table>
</div>
